<?xml version="1.0" encoding="utf-8"?>
<!-- Contains the front page with buttons to navigate   -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/fragment_main_tittel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Innstillinger"
            android:textColor="#000"
            android:textSize="30sp" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="infoBtn"
            android:text="Info og regler" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="showPreferencesBtn"
            android:text="Settings" />

        <Button
            android:background="@color/buttonColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="showPreferencesBtn"
            android:layout_marginTop="10dp"
            android:text="Om bruker" />

    </LinearLayout>

    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom" />

</FrameLayout>

