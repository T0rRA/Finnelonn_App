<?xml version="1.0" encoding="utf-8"?>

<!-- Contains the front page with buttons to navigate   -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/home"
        android:textColor="#000"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:onClick="nyeFunnBtn"
        android:text="Nye funn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:onClick="mineFunnBtn"
        android:text="Mine funn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:onClick="infoBtn"
        android:text="Info og regler" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:onClick="regUserBtn"
        android:text="Registrer bruker" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:onClick="toLoginPageBtn"
        android:text="Logg inn" />

</LinearLayout>
