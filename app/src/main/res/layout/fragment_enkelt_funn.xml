<?xml version="1.0" encoding="utf-8"?>

<!--Fragment for displaying and editing a find-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/fragment_enkelt_funn_bilde"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <!--The scrollView contains all of the text fields needed for the find-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="20dp"
        android:fadeScrollbars="false">

        <!--This linear layout is only for holding the textViews as the scrollView can only hold 1 view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider">

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_tittel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tittel: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_dato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dato: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_sted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sted: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_koordinater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Koordinater: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_grunneier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grunneier: (klikke for Ã¥ se mer info)"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_beskrivelse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beskrivelse: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_gjenstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gjenstand: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_funndybde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funndybde: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_gjenstand_merket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gjenstand merket med: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_datum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datum: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_arealtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arealtype: (Options?)"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_enkelt_funn_tv_annet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andre opplysninger: "
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>